pipeline {
    agent any
    environment {
        GIT_URL = 'https://github.com/Mohankumnj/index.html.git' // Replace with your Git repository URL
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    checkout([$class: 'GitSCM', branches: [[name: 'main']], userRemoteConfigs: [[url: GIT_URL]])
                }
            }
        }

        stage('Copy Files') {
            steps {
                sh 'mkdir -p $WORKSPACE/htdocs/'
                sh 'curl -o $WORKSPACE/htdocs/index.html https://www.momjunction.com/articles/lord-ganesha-stories-kids_00101242/genesh.html'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    def customImage = docker.build('httpd', '/usr/local/apache2/htdocs')
                    customImage.push()
                }
            }
        }
    }
}

pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

     stage('Copy Files') {
    steps {
        sh 'curl -o /usr/local/apache2/htdocs/index.html https://www.momjunction.com/articles/lord-ganesha-stories-kids_00101242/index.html'
    }
}

stage('Build Docker Image') {
            steps {
                script {
                    def customImage = docker.build('httpd', '.')
                    customImage.push()
                }
            }
        }
    }
}
